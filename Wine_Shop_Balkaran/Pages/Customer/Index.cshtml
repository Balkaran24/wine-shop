<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CustomerMaster[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerMaster[0].Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerMaster[0].Email)
            </th>
            <th>
